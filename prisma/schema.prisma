// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Card{
  id String @id @default(cuid())
  name String @unique 
  description String
  done Boolean @default(false)
  createdAt DateTime @default(now())
}

model User{
   id String @id @default(cuid())
   firstName String
   lastName String
   email String @unique
   password String
}